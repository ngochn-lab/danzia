<div class="banner-dances-section">
  <div class="banner-dances-container">
    <div class="banner-dances-wrapper">
      <button class="banner-dances-arrow banner-dances-arrow-left" aria-label="Scroll left" type="button">&#8249;</button>
      <div class="banner-dances-row" id="bannerDancesRow">
        {% assign image_count = 0 %}
        {% for block in section.blocks %}
          {% if block.settings.image and image_count < 3 %}
            <div class="banner-dances-slide">
              <a href="{{ block.settings.link | default: '#' }}" class="banner-dances-link">
                <div class="banner-dances-image-wrapper">
                  <img 
                    src="{{ block.settings.image | image_url: width: 800, height: 800 }}" 
                    alt="{{ block.settings.image.alt | escape }}"
                    loading="lazy"
                    class="banner-dances-image"
                  >
                </div>
                <div class="banner-dances-title-wrapper">
                  <h5 class="banner-dances-title source-sans-pro">
                    {{ block.settings.title | default: 'Category' }}
                  </h5>
                </div>
              </a>
            </div>
            {% assign image_count = image_count | plus: 1 %}
          {% endif %}
        {% endfor %}
      </div>
      <button class="banner-dances-arrow banner-dances-arrow-right" aria-label="Scroll right" type="button">&#8250;</button>
    </div>
  </div>
</div>

<style>
.banner-dances-section {
  width: 100vw;
  margin: 0;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  padding: 0;
  box-sizing: border-box;
  background: none;
}
.banner-dances-container {
  width: 100vw;
  max-width: 100vw;
  margin: 0;
  padding: 0;
}
.banner-dances-wrapper {
  width: 100vw;
  max-width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 0;
}
.banner-dances-row {
  display: flex;
  flex-direction: row;
  width: 100vw;
  max-width: 100vw;
  gap: 24px; /* Added gap between slides */
}
.banner-dances-slide {
  flex: 1 1 0;
  min-width: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  margin: 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  border-right: 1px solid #eef2f7;
  border-bottom: none;
  scroll-snap-align: start;
}
.banner-dances-slide:last-child {
  border-right: none;
}
.banner-dances-link {
  display: flex;
  flex-direction: column;
  height: 100%;
  text-decoration: none;
  color: inherit;
  outline: none;
}
.banner-dances-image-wrapper {
  width: 100%;
  aspect-ratio: 1/1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  overflow: hidden;
  background: #f5f7fa;
}
.banner-dances-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center center;
  border-radius: 0;
  display: block;
}
.banner-dances-title-wrapper {
  padding: 16px 8px;
  text-align: center;
  background: #fff;
  border-top: 1px solid #eef2f7;
  min-height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner-dances-title {
  font-size: 1.12rem;
  font-weight: 600;
  margin: 0;
  color: #222;
  letter-spacing: 0.01em;
  text-transform: capitalize;
  line-height: 1.3;
  font-family: var(--font-stack, 'Source Sans Pro', arial, sans-serif);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.banner-dances-arrow {
  display: none;
}
@media (max-width: 850px) {
  .banner-dances-row {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    gap: 16px;
    padding-bottom: 16px;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
  }
  .banner-dances-row::-webkit-scrollbar {
    display: none;
    height: 0;
    width: 0;
    background: transparent;
  }
  .banner-dances-slide {
    min-width: 70vw;
    max-width: 80vw;
    width: 80vw;
    flex: 0 0 auto;
    border-right: none;
  }
  .banner-dances-arrow {
    background: transparent;
    border: none;
    width: 52px;
    height: 52px;
    font-size: 2.1rem;
    color: #222;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.7;
    transition: opacity 0.2s, background 0.2s;
  }
  .banner-dances-arrow:hover {
    opacity: 1;
    background: rgba(255,255,255,0.3);
  }
  .banner-dances-arrow:active {
    background: rgba(238,242,247,0.2);
  }
  .banner-dances-arrow-left {
    left: 0;
  }
  .banner-dances-arrow-right {
    right: 0;
  }
}
@media (max-width: 575px) {
  .banner-dances-row {
    gap: 12px; /* More space between slides on small screens */
  }
  .banner-dances-slide {
    min-width: 85vw;
    max-width: 90vw;
    width: 90vw;
  }
  .banner-dances-arrow {
    width: 42px;
    height: 42px;
    font-size: 1.5rem;
  }
  .banner-dances-title-wrapper {
    padding: 8px 2px;
    min-height: 24px;
  }
  .banner-dances-title {
    font-size: 0.93rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var row = document.getElementById('bannerDancesRow');
  var left = document.querySelector('.banner-dances-arrow-left');
  var right = document.querySelector('.banner-dances-arrow-right');

  function isMobile() {
    return window.matchMedia('(max-width: 850px)').matches;
  }

  function getSlideWidth() {
    var slide = row.querySelector('.banner-dances-slide');
    if (!slide) return row.offsetWidth;
    var styles = window.getComputedStyle(row);
    var gap = styles && styles.gap ? parseInt(styles.gap, 10) || 0 : 16;
    return slide.offsetWidth + gap;
  }

  function getCurrentIndex() {
    var slides = row.querySelectorAll('.banner-dances-slide');
    var scrollLeft = row.scrollLeft;
    var slideWidth = getSlideWidth();
    return Math.round(scrollLeft / slideWidth);
  }

  function scrollToSlide(idx) {
    var slideWidth = getSlideWidth();
    row.scrollTo({left: idx * slideWidth, behavior: 'smooth'});
  }

  function addArrowListeners() {
    var slides = row.querySelectorAll('.banner-dances-slide');
    var maxIdx = slides.length - 1;

    left.addEventListener('click', function() {
      var currentIdx = getCurrentIndex();
      if (currentIdx <= 0) {
        scrollToSlide(maxIdx);
      } else {
        scrollToSlide(currentIdx - 1);
      }
    });

    right.addEventListener('click', function() {
      var currentIdx = getCurrentIndex();
      if (currentIdx >= maxIdx) {
        scrollToSlide(0);
      } else {
        scrollToSlide(currentIdx + 1);
      }
    });
  }

  if (isMobile()) {
    addArrowListeners();
  }
});
</script>

