<div class="promo-banner-section">
  <div class="promo-banner-container">
    <div class="promo-banner-image">
      {% if section.settings.promo_image %}
        <img 
          src="{{ section.settings.promo_image | image_url }}"
          alt="{{ section.settings.promo_image.alt | escape }}"
          loading="lazy"
          class="promo-banner-img"
          style="width: 100vw; height: auto; object-fit: contain; object-position: center center; display: block;"
        >
      {% else %}
        <div class="promo-banner-placeholder">
          <p>Promotional Banner Image</p>
        </div>
      {% endif %}
      
      {% if section.settings.promo_link != blank %}
        <a href="{{ section.settings.promo_link }}" class="promo-full-link">
          <span class="visually-hidden">{{ section.settings.promo_link_text | default: 'View Promotion' }}</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .promo-banner-section {
    width: 100vw;
    margin: 0;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    padding: 40px 0; /* vertical padding */
    box-sizing: border-box;
    /* background removed */
  }

  .promo-banner-container {
    width: 100vw;
    max-width: 100vw;
    margin: 0;
    padding: 0;
  }

  .promo-banner-image {
    position: relative;
    overflow: hidden;
    height: 500px;
    display: flex;
    align-items: stretch;
    justify-content: stretch;
    border-radius: 0;
    box-shadow: 0 2px 12px rgba(34, 34, 34, 0.08);
    background: #fff;
    width: 100vw;
    max-width: 100vw;
  }

  .promo-banner-img {
  width: 100vw;
  max-width: 100vw;
  height: auto;
  object-fit: contain;
  object-position: center center;
  display: block;
  border-radius: 0;
  }

  .promo-full-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
  }

  .promo-banner-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw;
    height: 500px;
    background-color: #f5f5f5;
    border: 2px dashed #ccc;
    color: #666;
    font-size: 18px;
  }

  .visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
  }

  @media screen and (max-width: 1024px) {
    .promo-banner-image,
    .promo-banner-img,
    .promo-banner-placeholder {
      height: auto;
      max-height: none;
    }
  }

  @media screen and (max-width: 768px) {
    .promo-banner-section {
      padding: 32px 0;
      min-height: 0;
      /* background removed */
    }
    .promo-banner-container,
    .promo-banner-image,
    .promo-banner-img,
    .promo-banner-placeholder {
      height: auto;
      max-height: none;
      width: 100vw;
      max-width: 100vw;
      border-radius: 0;
    }
    .promo-banner-image {
      box-shadow: none;
      margin: 0;
    }
    .promo-banner-img {
      padding: 0;
      margin: 0;
      height: auto;
      width: 100vw;
      max-width: 100vw;
      object-fit: contain;
    }
  }

  @media screen and (max-width: 480px) {
    .promo-banner-section {
      padding: 24px 0;
      min-height: 0;
      /* background removed */
    }
    .promo-banner-container,
    .promo-banner-image,
    .promo-banner-img,
    .promo-banner-placeholder {
      height: auto;
      max-height: none;
      width: 100vw;
      max-width: 100vw;
      border-radius: 0;
    }
    .promo-banner-image {
      box-shadow: none;
      margin: 0;
    }
    .promo-banner-img {
      padding: 0;
      margin: 0;
      height: auto;
      width: 100vw;
      max-width: 100vw;
      object-fit: contain;
    }
  }
</style>

{% schema %}
{
  "name": "Promotional Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Banner Image"
    },
    {
      "type": "image_picker",
      "id": "promo_image",
      "label": "Promotional Image",
      "info": "Image will be displayed at 100% original quality with no compression"
    },
    {
      "type": "range",
      "id": "image_x",
      "label": "Image Horizontal Position",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "image_y",
      "label": "Image Vertical Position",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Banner Link"
    },
    {
      "type": "url",
      "id": "promo_link",
      "label": "Banner Link URL",
      "info": "Makes the entire banner clickable"
    },
    {
      "type": "text",
      "id": "promo_link_text",
      "label": "Link Text",
      "default": "View Promotion",
      "info": "Accessible text for screen readers"
    }
  ],
  "presets": [
    {
      "name": "Promotional Banner"
    }
  ]
}
{% endschema %}