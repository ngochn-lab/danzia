{% comment %}
  Community Posts Section - Dances Card Design Applied, Description Removed
  Input: title, image, uploader name (shown as Author)
  3 cards visible on desktop, 1 card on mobile (scroll with arrows).
  Cards have spacing, arrow navigation, top spacing.
  If no Author, don't display the Author block.
{% endcomment %}

<div class="community-posts-section">
  <div class="community-posts-container">
    <div class="community-posts-wrapper">
      <button class="community-posts-arrow community-posts-arrow-left" aria-label="Scroll left" type="button">&#8249;</button>
      <div class="community-posts-row" id="communityPostsRow">
        {% for block in section.blocks %}
          <div class="community-posts-card">
            <a href="#" class="community-posts-link">
              <div class="community-posts-image-wrapper">
                {% if block.settings.image %}
                  <img 
                    src="{{ block.settings.image | image_url: width: 600 }}" 
                    alt="{{ block.settings.title | escape }}"
                    loading="lazy"
                    class="community-posts-image"
                  >
                {% else %}
                  <span style="color:#bbb;">No image</span>
                {% endif %}
              </div>
              {% unless block.settings.title == blank %}
                <div class="community-posts-title-wrapper">
                  <h5 class="community-posts-title source-sans-pro">
                    {{ block.settings.title }}
                  </h5>
                </div>
              {% endunless %}
              
            </a>
          </div>
        {% endfor %}
      </div>
      <button class="community-posts-arrow community-posts-arrow-right" aria-label="Scroll right" type="button">&#8250;</button>
    </div>
  </div>
</div>

<style>
.community-posts-section {
  width: 100vw;
  margin: 0;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  padding-top: 64px;
  padding-bottom: 0;
  box-sizing: border-box;
  background: none;
}
.community-posts-container {
  width: 100vw;
  max-width: 100vw;
  margin: 0;
  padding: 0;
}
.community-posts-wrapper {
  width: 100vw;
  max-width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 0;
}
.community-posts-row {
  display: flex;
  flex-direction: row;
  width: 100vw;
  max-width: 100vw;
  gap: 24px;
  overflow: hidden;
  scroll-behavior: smooth;
  box-sizing: border-box;
}
  .community-posts-card {
    flex: 0 0 25%;
    max-width: 25%;
  min-width: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  margin: 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  border-right: 1px solid #eef2f7;
  border-bottom: none;
  scroll-snap-align: start;
  transition: box-shadow 0.18s;
}
.community-posts-card:last-child {
  border-right: none;
}
.community-posts-link {
  display: flex;
  flex-direction: column;
  height: 100%;
  text-decoration: none;
  color: inherit;
  outline: none;
}
.community-posts-image-wrapper {
  width: 100%;
  aspect-ratio: 1/1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  overflow: hidden;
  background: #f5f7fa;
}
.community-posts-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center center;
  border-radius: 0;
  display: block;
}
.community-posts-title-wrapper {
  padding: 16px 8px 6px 8px;
  text-align: center;
  background: #fff;
  border-top: 1px solid #eef2f7;
  min-height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.community-posts-title {
  font-size: 1.12rem;
  font-weight: 600;
  margin: 0;
  color: #222;
  letter-spacing: 0.01em;
  text-transform: capitalize;
  line-height: 1.3;
  font-family: var(--font-stack, 'Source Sans Pro', arial, sans-serif);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.community-posts-author-wrapper {
  padding: 0 8px 16px 8px;
  text-align: center;
  background: #fff;
  display: flex;
  flex-direction: row;
  gap: 6px;
  align-items: center;
  justify-content: center;
  font-size: 0.98rem;
  color: #888;
}
.community-posts-author-label {
  font-weight: 400;
  color: #aaa;
  font-size: 0.98em;
}
.community-posts-author {
  font-weight: 600;
  color: #555;
  font-size: 1em;
}

.community-posts-arrow {
  background: transparent;
  border: none;
  width: 64px;
  height: 64px;
  font-size: 2.5rem;
  color: #222;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.7;
  transition: opacity 0.2s, background 0.2s;
}
.community-posts-arrow:hover {
  opacity: 1;
  background: rgba(255,255,255,0.3);
}
.community-posts-arrow:active {
  background: rgba(238,242,247,0.2);
}
.community-posts-arrow-left {
  left: 0;
}
.community-posts-arrow-right {
  right: 0;
}
@media (max-width: 900px) {
  .community-posts-section {
    padding-top: 40px;
  }
  .community-posts-row {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    gap: 16px;
    padding-bottom: 16px;
    scroll-snap-type: x mandatory;
    scrollbar-width: none;
  }
  .community-posts-row::-webkit-scrollbar {
    display: none;
    height: 0;
    width: 0;
    background: transparent;
  }
  .community-posts-card {
    flex: 0 0 100vw;
    max-width: 97vw;
    min-width: 97vw;
    border-right: none;
    margin: 0;
  }
  .community-posts-arrow {
    width: 52px;
    height: 52px;
    font-size: 2.1rem;
    display: flex;
  }
}
@media (max-width: 575px) {
  .community-posts-section {
    padding-top: 32px;
  }
  .community-posts-row {
    gap: 12px;
  }
  .community-posts-card {
    flex: 0 0 98vw;
    max-width: 98vw;
    min-width: 98vw;
  }
  .community-posts-arrow {
    width: 42px;
    height: 42px;
    font-size: 1.5rem;
  }
  .community-posts-title-wrapper {
    padding: 8px 2px 2px 2px;
    min-height: 24px;
  }
  .community-posts-author-wrapper {
    padding: 0 2px 12px 2px;
    font-size: 0.92rem;
  }
  .community-posts-title {
    font-size: 0.93rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var row = document.getElementById('communityPostsRow');
  var left = document.querySelector('.community-posts-arrow-left');
  var right = document.querySelector('.community-posts-arrow-right');

  function getSlideWidth() {
    var slide = row.querySelector('.community-posts-card');
    if (!slide) return row.offsetWidth;
    var styles = window.getComputedStyle(row);
    var gap = styles && styles.gap ? parseInt(styles.gap, 10) || 0 : 24;
    return slide.offsetWidth + gap;
  }

  function getVisibleSlides() {
    return window.innerWidth > 900 ? 3 : 1;
  }

  function getCurrentIndex() {
    var scrollLeft = row.scrollLeft;
    var slideWidth = getSlideWidth();
    return Math.round(scrollLeft / slideWidth);
  }

  function scrollToSlide(idx) {
    var slideWidth = getSlideWidth();
    row.scrollTo({left: idx * slideWidth, behavior: 'smooth'});
  }

  left.addEventListener('click', function() {
    var currentIdx = getCurrentIndex();
    var slides = row.querySelectorAll('.community-posts-card');
    var visible = getVisibleSlides();
    var maxIdx = Math.max(0, slides.length - visible);
    if (currentIdx <= 0) {
      scrollToSlide(maxIdx);
    } else {
      scrollToSlide(currentIdx - 1);
    }
  });

  right.addEventListener('click', function() {
    var currentIdx = getCurrentIndex();
    var slides = row.querySelectorAll('.community-posts-card');
    var visible = getVisibleSlides();
    var maxIdx = Math.max(0, slides.length - visible);
    if (currentIdx >= maxIdx) {
      scrollToSlide(0);
    } else {
      scrollToSlide(currentIdx + 1);
    }
  });

  window.addEventListener('resize', function() {
    var idx = getCurrentIndex();
    scrollToSlide(idx);
  });
});
</script>

