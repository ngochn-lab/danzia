  .mobile-dropdown__menu {
    padding-inline: 0;
    margin-block: var(--padding-3xs);
  }

  .mobile-dropdown__menu--nested {
    padding-left: 0;
    margin-block: 0;
  }

  .mobile-dropdown__item {
    border-bottom: none;
    margin-bottom: 0;
