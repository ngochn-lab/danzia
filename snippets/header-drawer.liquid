  /* Mobile Dropdown Styles */
  .mobile-dropdown {
    width: 100%;
    position: relative;
  }

  .mobile-dropdown__trigger {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    z-index: 3;
    min-height: 40px;
    padding: var(--padding-2xs) 0;
    border-bottom: 1px solid #d3d3d3;
    margin-bottom: var(--padding-xs);
    margin-left: calc(-1 * var(--drawer-padding));
    margin-right: calc(-1 * var(--drawer-padding));
    margin-top: var(--padding-xs);
    padding-left: var(--drawer-padding);
    padding-right: var(--drawer-padding);
    padding-top: var(--padding-sm);
    padding-bottom: var(--padding-sm);
    width: calc(100% + 2 * var(--drawer-padding));
  }

  .mobile-dropdown__trigger:hover {
    background-color: rgba(var(--color-foreground), 0.05);
    border-radius: var(--border-radius-xs);
  }

  .mobile-dropdown__icon {
    transition: transform 0.2s ease;
    width: var(--icon-size-xs);
    height: var(--icon-size-xs);
    margin-left: auto;
    padding-left: var(--padding-sm);
  }

  .mobile-dropdown__icon--nested {
    width: calc(var(--icon-size-xs) * 0.8);
    height: calc(var(--icon-size-xs) * 0.8);
  }

  .mobile-dropdown[open] .mobile-dropdown__icon {
    transform: rotate(90deg);
  }

  .mobile-dropdown__content {
    overflow: hidden;
    background-color: rgba(var(--color-foreground), 0.03);
    border-left: 3px solid rgba(var(--color-foreground), 0.12);
    border-radius: var(--border-radius-xs);
    margin: var(--padding-2xs) 0 var(--padding-2xs) var(--padding-sm);
    padding: 0;
    animation: mobile-dropdown-open 0.3s ease-out;
    position: relative;
    z-index: 1;
  }

  .mobile-dropdown__content--multilevel {
    background-color: rgba(var(--color-foreground), 0.04);
    border-radius: var(--border-radius-sm);
    margin: var(--padding-xs) 0;
    padding: 0;
    overflow: hidden;
  }

  .mobile-dropdown__content--nested {
    background-color: rgba(var(--color-foreground), 0.05);
    border-left: 3px solid rgba(var(--color-foreground), 0.18);
    margin-left: var(--padding-md);
    padding: 0;
    overflow: hidden;
    position: relative;
    z-index: 2;
    border-radius: var(--border-radius-xs);
    margin-top: var(--padding-2xs);
